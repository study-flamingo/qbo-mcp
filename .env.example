# QuickBooks Online MCP Server Configuration
# Copy this file to .env and fill in your values

# QuickBooks Online App Credentials
# Get these from https://developer.intuit.com/app/developer/myapps
QBO_CLIENT_ID=your_client_id_here
QBO_CLIENT_SECRET=your_client_secret_here

# OAuth Settings
QBO_REDIRECT_URI=http://localhost:8080/callback
QBO_SCOPE=com.intuit.quickbooks.accounting

# Environment: sandbox or production
QBO_ENVIRONMENT=sandbox

# Discovery Document URL (usually doesn't need to change)
QBO_DISCOVERY_DOCUMENT_URL=https://appcenter.intuit.com/api/v1/OpenID_basic_address_email_profile_phone

# Token Storage
QBO_TOKEN_FILE=qbo_tokens.json
